rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Break recursion: Check if user is reading their OWN doc first.
      // This allows isAdmin() to call get() on the current user's doc safely.
      allow read: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // --- Navigation Collection ---
    match /navigation/{navId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Resource Links Collection ---
    match /resource_links/{linkId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Internal Notes ---
    match /notes/{noteId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.isShared == true || 
        resource.data.createdBy == request.auth.uid || 
        isAdmin()
      );
      allow update, delete: if request.auth != null && (
        resource.data.createdBy == request.auth.uid || 
        isAdmin()
      );
    }

    // --- Directus Guides Collection ---
    match /directus_guides/{guideId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Usage Logs ---
    match /usage/{usageId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin();
    }
    
    // --- Tool Ideas ---
    match /tool_ideas/{ideaId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (
        isAdmin() ||
        (resource.data.userId == request.auth.uid &&
         request.resource.data.status == resource.data.status)
      );
    }

    // --- AI Subscriptions Tracker ---
    match /subscriptions/{subId} {
      allow read, write: if isAdmin();
    }

    // --- Tool Configurations (Rules) ---
    match /configurations/{configId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Changelog History ---
    match /changelog/{logId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Legacy Feedback ---
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, delete: if isAdmin();
    }

    // --- Tool Config (unified configuration layer) ---
    match /tool_config/{toolId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- Unified Tool Reports ---
    match /tool_reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // --- Thematic QA Reports ---
    match /tqa_reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // --- QA Runs (immutable â€” no update/delete allowed) ---
    match /qa_runs/{runId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.triggered_by_user_id == request.auth.uid || isAdmin()
      );
      allow update, delete: if false;
    }

    // --- QA Prompt Versions (admin-only write, all auth users can read active prompts) ---
    match /qa_versions/{versionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- AI Tool Settings (capability tier overrides, admin write, all authenticated users read) ---
    match /tool_settings/{toolId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}